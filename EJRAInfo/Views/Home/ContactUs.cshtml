@model EJRAInfo.Models.ContactViewModel
@{
    ViewBag.Title = "Contact the Oxford EJRA Group";
}

<div class="row">
    <div class="col-md-11 col-sm-11">
        <div class="page-header">
            <h2>Contact the Oxford EJRA Group <span class="fa fa-envelope-o"></span><small></small></h2>
        </div>
        <h3>People to contact<small></small></h3>
        <p>
            The following members of the Oxford EJRA Group are happy to be contacted
        </p>
        <div class="row">
            <div class="col-md-8">
                <table class="table">
                    <tbody>
                        <tr>
                            <td>Pete Edwards</td>
                            <td><a href="mailto:peter.edwards@chem.ox.ac.uk">peter.edwards@chem.ox.ac.uk</a></td>
                        </tr>
                        <tr>
                            <td>Peter Smith</td>
                            <td><a href="mailto:peter.smith@npeu.ox.ac.uk">peter.smith@npeu.ox.ac.uk</a></td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
        <hr />
        <h3>Send us an email<small></small></h3>
        @using (Html.BeginForm("ContactUs", "Home", FormMethod.Post, new { @class = "form-horizontal" }))
            {
            <p>Please use the form below to contact the Oxford EJRA Group</p>

            <div class="row">
                <div class="form-group">
                    @Html.LabelFor(model => model.From, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-6">
                        @Html.EditorFor(model => model.From, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.From, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.Subject, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-6">
                        @Html.EditorFor(model => model.Subject, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Subject, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.Message, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-6">
                        @Html.EditorFor(model => model.Message, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Message, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
            <div class="form-actions">
                <button type="submit" class="btn btn-primary">Send message</button>
            </div>
        }
    </div>
</div>

